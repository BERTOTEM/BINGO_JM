<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header">
                Accont Login
            </div>
            <div class="card-body">
                <form action="/users/signin" method="POST">
                    <div class="from-group">
                        <input type="text" class="form-control" name="name" placeholder="Nombre_para_jugar">
                    </div>
                    <br>
                    <div class="from-group">
                        <input type="email" class="form-control" name="email" placeholder="Coloca tu email">
                    </div>
                    <br>
                    <div class="from-group">
                        <input type="password" class="form-control" name="password" placeholder="Coloca tu password">
                    </div>
                    <br>
                    <button class="btn btn-primary d-grid gap-2 col-6 mx-auto">
                        Singin
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>